{
  "name": "draftail",
  "version": "0.5.0",
  "description": "A batteries-excluded rich text editor based on Draft.js",
  "author": "Springload",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "draftjs",
    "draft.js",
    "draft",
    "draft-js",
    "editor",
    "wysiwyg",
    "rich text",
    "rte",
    "react",
    "react.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/springload/draftail.git"
  },
  "bugs": {
    "url": "https://github.com/springload/draftail/issues"
  },
  "homepage": "https://github.com/springload/draftail#readme",
  "eslintConfig": {
    "extends": "springload"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/examples/test.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "draftjs-utils": "0.7.0",
    "immutable": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "coveralls": "^2.11.15",
    "dotenv": "^4.0.0",
    "draft-js": "^0.10.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "3.19.0",
    "eslint-config-springload": "1.0.2",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.10.3",
    "express": "^4.14.0",
    "jest": "^19.0.2",
    "node-sass": "^4.3.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "peerDependencies": {
    "draft-js": "^0.10.0",
    "prop-types": "^15.5.0",
    "react": "^15.5.0",
    "react-dom": "^15.5.0"
  },
  "scripts": {
    "start": "npm run server -s",
    "server": "node server/index.js",
    "js": "babel -d dist lib",
    "css": "node-sass lib/index.scss examples/assets/draftail.css && cp examples/assets/draftail.css dist",
    "dist": "npm run js -s && npm run css -s",
    "linter:js": "eslint",
    "lint": "npm run linter:js -s -- .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "pages": "rm -rf pages && cp -R examples pages && webpack --config=webpack.config.prod.js --progress -p",
    "deploy": "./bin/deploy.sh"
  }
}
